<%= form_with model: @product do |f| %>
  <p>
    <%= f.label :name, '作品名' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price, '値段' %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :file, 'ファイル' %>
    <%= f.file_field :file %>
  </p>
  <p>
    <%= f.label :thumbnail, 'サムネイル画像' %>
    <%= f.file_field :thumbnail %>
  </p>
  <%= f.submit '登録' %>
<% end %>

