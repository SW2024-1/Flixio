<div class="users-container">
  <% @users.each do |e| %>
    <div class="user">
      <p>
        uid: <%= e.uid %>, password_digest: <%= e.password_digest %>
        <%= link_to '削除', user_path(e), data: { turbo_method: :delete }, class: 'delete-link' %>
      </p>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "新規追加", new_user_path, class: 'button register-btn' %>
    <%= link_to "ログイン", root_path, class: 'button login-btn' %>
  </div>
</div>
